@model List<Movie>

<a href="Movie/MovieForm" class="btn btn-light">Add Movie</a>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Title
        </th>
        <th>
            Genre
        </th>
        <th>
            Runtime
        </th>
    </tr>

    @foreach (var movie in Model)
    {
<tr>
    
        <td>@movie.Id</td>
        <td>@movie.Title</td>
        <td>@movie.Genre</td>
        <td>@movie.Runtime Minutes</td>
        <td><a href="Movie/MovieForm?id=@movie.Id" class="btn btn-light">Edit</a></td>
        <td><a href="Movie/DeleteMovie?id=@movie.Id" class="btn btn-light">Delete</a></td>
        
</tr>}
</table>