@model Movie

@if(@Model.Id == 0 )
{
<h1>Add a Movie</h1>
<form action="/Movie/AddMovie" method="post">
    <label asp-for="Title"></label>
    <input type="text" asp-for="Title" value="@Model.Title" />
    <br />

    <label asp-for="Genre"></label>
    <input type="text" asp-for="Genre" value="@Model.Genre" />
    <br />

    <label asp-for="Runtime"></label>
    <input type="number" asp-for="Runtime" value="@Model.Runtime" />
    <br />

    <input type="submit" value="Add this Movie" />
</form>
}
else
{
<h1>Edit @Model.Title</h1>
<form action="/Movie/EditMovie" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" placeholder="@Model.Id" />
    <br />

    <label asp-for="Title"></label>
    <input type="text" asp-for="Title" value="@Model.Title" placeholder="@Model.Title" />
    <br />

    <label asp-for="Genre"></label>
    <input type="text" asp-for="Genre" value="@Model.Genre" placeholder="@Model.Genre" />
    <br />

    <label asp-for="Runtime"></label>
    <input type="number" asp-for="Runtime" value="@Model.Runtime" placeholder="@Model.Runtime" />
    <br />

    <input type="submit" value="Save Changes" />
</form>

}